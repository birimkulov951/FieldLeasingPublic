<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/blackPrimaryDark2</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:statusBarColor">@color/greyColor</item>
</style>

    <style name="RatingBar" parent="android:Widget.RatingBar">
        <item name="colorControlNormal">@color/greyColor</item>
        <item name="colorControlActivated">@color/yellowColor</item>
        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="minHeight">16dp</item>
        <item name="maxHeight">16dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/greenPrimary</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="usual_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/blackColor1</item>
    </style>

    <style name="usual_text_2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#C4C4C4</item>
    </style>

    <style name="button_style">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="button_style_2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0D8549</item>
    </style>

    <style name="txt_headers">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="the_heading_sec">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="the_heading">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="style_for_date">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#AFAFAF</item>
    </style>


</resources>