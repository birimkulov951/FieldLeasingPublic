<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:background="@color/backgroundColor"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/field_reviews_fragment_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/did_not_defined"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:textColor="@color/blackColor2"/>

        <RatingBar
            android:id="@+id/field_reviews_fragment_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="@color/yellowColor"
            android:numStars="5"
            android:rating="0.0"
            android:stepSize="0.5"/>

        <TextView
            android:id="@+id/field_reviews_fragment_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/did_not_defined"
            style="@style/usual_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/field_reviews_fragment_feedback_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/did_not_defined"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:textColor="@color/greyColor" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/greyColor"/>

    </LinearLayout>

</RelativeLayout>