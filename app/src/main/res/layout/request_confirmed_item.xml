<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="15dp"
    android:background="@color/backgroundColor"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">
        <TextView
            android:id="@+id/requests_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:text="John Watson"
            android:textColor="@color/blackColor1"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"/>
            <TextView
                android:id="@+id/requests_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+996550148833"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/greenPrimary"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playground_r"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blackColor1"/>
            <TextView
                android:id="@+id/requests_field_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стадион Спартак"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/greenPrimary"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.20.2020"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blackColor1"/>
            <TextView
                android:id="@+id/request_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="18:00 - 20:00"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blackColor1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>