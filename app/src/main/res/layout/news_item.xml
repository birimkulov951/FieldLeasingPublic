<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:background="@color/backgroundColor"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/news_fragment_text_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/did_not_defined"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:textColor="@color/blackColor2"
                android:maxLines="3"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/news_fragment_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"
                android:text="@string/did_not_defined"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/greyColor" />

            <TextView
                android:id="@+id/news_fragment_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/news_fragment_date_text"
                android:layout_alignParentBottom="true"
                android:paddingBottom="20dp"
                android:layout_marginStart="15dp"
                android:text="@string/did_not_defined"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textColor="@color/greyColor" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="160dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/news_fragment_news_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder_image"
                    android:background="@color/greenPrimary"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>