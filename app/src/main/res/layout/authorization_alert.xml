<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_title"
            android:paddingTop="24dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы успешно авторизовались"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/blackColor2"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_alert_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/whiteToolbarAndCardViewColor"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_stroke_green"
                android:backgroundTint="@color/greenPrimary"
                android:layout_margin="25dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/book_alert_btn_ok"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/whiteToolbarAndCardViewColor"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="15dp"
                android:background="@drawable/background_stroke_green"
                android:backgroundTint="@color/greenPrimary"
                android:layout_margin="20dp"/>

        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>